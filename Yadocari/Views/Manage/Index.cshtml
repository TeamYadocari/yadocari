@model Yadocari.Models.IndexViewModel
@{
    ViewBag.Title = "管理";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>システム設定の変更</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>設定:</dt>
        <dd>
            [@Html.ActionLink("管理", "SystemConfig")]
        </dd>
        <dt>メール:</dt>
        <dd>
            [@Html.ActionLink("管理", "MailConfig")]
        </dd>
    </dl>

    <hr />
    <h4>アカウント設定の変更</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>パスワード:</dt>
        <dd>
            [@(Model.HasPassword ? Html.ActionLink("パスワードの変更", "ChangePassword") : Html.ActionLink("作成", "SetPassword"))]
        </dd>
        <dt>ユーザー:</dt>
        <dd>
            @Model.Users.Count [@Html.ActionLink("管理", "ManageUsers")]
        </dd>
        <dt>Microsoftアカウント:</dt>
        <dd>
            @Model.MSAccounts.Count [@Html.ActionLink("管理", "ManageMicrosoftAccounts")]
        </dd>
    </dl>

    <hr />
    <h4>登録済み資料の管理</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>資料:</dt>
        <dd>
            [@Html.ActionLink("管理", "ManageFiles")]
        </dd>
    </dl>
</div>
